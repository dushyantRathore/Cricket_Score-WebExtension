{
  "manifest_version": 2,
  "name": "Cricket Score",
  "version": "1.0",

  "description": "Get the live scores of cricket matches",
  "homepage_url": "https://github.com/dushyantRathore/Cricket_Score-WebExtension",
  "icons": {
    "48": "icons/icon1.jpg"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/icon2.png", // Default icon displayed
    "default_title": "Cricketify",
    "default_popup": "popup/index.html"
  }

}
